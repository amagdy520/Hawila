<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oil"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagePr"
            android:layout_centerVertical="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:id="@+id/pImage"
            android:scaleType="centerInside"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pImage"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:id="@+id/Invite_num"
            />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagePr"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Name:"
            android:padding="5dp"
            android:textStyle="bold"
            android:id="@+id/pName"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pName"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Name"
            android:padding="5dp"
            android:textStyle="bold"
            android:id="@+id/ShowpName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagePr"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Phone:"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/pName"
            android:id="@+id/pMobile"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pMobile"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Phone"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/pName"
            android:id="@+id/ShowpMobile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagePr"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Email:"
            android:padding="5dp"
            android:textStyle="bold"
            android:id="@+id/pEmail"
            android:layout_below="@id/ShowpMobile"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pEmail"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Email"
            android:padding="5dp"
            android:textStyle="bold"
            android:id="@+id/ShowpEmail"
            android:layout_below="@id/ShowpMobile"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>